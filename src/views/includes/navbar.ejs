<% if (originalUrlEq('/')) { %>
<nav
  class="navbar is-transparent is-fixed-top"
  role="navigation"
  aria-label="main navigation"
  style="background: transparent;"
>
  <% } else { %>
  <nav
    class="navbar is-light has-shadow"
    role="navigation"
    aria-label="main navigation"
    style="margin-bottom: 1rem"
  >
    <% } %>
    <div class="navbar-brand">
      <a class="navbar-item" href="/">
        Mirage
      </a>
      <a
        role="button"
        class="navbar-burger burger"
        aria-label="menu"
        aria-expanded="false"
        data-target="navbar-menu"
      >
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>
    <div class="navbar-menu" id="navbar-menu">
      <div class="navbar-start">
        <a class="navbar-item <%= originalUrlEq('/') %>" href="/">
          Home
        </a>
      </div>
      <div class="navbar-end">
        <div class="navbar-item">
          <% if (loggedIn) { %>
          <span class="navbar-item">
            Welcome, <%= profile.username %>
          </span>
          <div class="buttons">
            <a class="button is-link" href="/account">
              Manage Account
            </a>
            <a class="button is-danger" href="/auth/logout">
              Sign Out
            </a>
          </div>
          <% } else { %>
          <div class="buttons">
            <a class="button is-link" href="/auth/register">
              <strong>Sign up</strong>
            </a>
            <a class="button is-light" href="/auth/login">
              Log in
            </a>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </nav>
</nav>
