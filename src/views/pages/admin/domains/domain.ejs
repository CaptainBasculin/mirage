<a href="/admin/domains" class="has-text-link">Back to Listing</a>

<div class="content">
  <h1>Domain <code><%= domain.id %></code></h1>
  <p>
    <label class="label">Snowflake</label>
    <code><%= domain.id %></code>
  </p>
  <p>
    <label class="label">Domain</label>
    <code><%= domain.domain %></code>
  </p>
  <form method="POST">
    <div class="field">
      <label class="label">Donor (leave empty if none)</label>
      <div class="control">
        <input
          name="donor"
          class="input"
          type="text"
          placeholder="relative"
          value="<%= domain.donor.username %>"
        />
      </div>
    </div>

    <div class="field">
      <label class="label">Public</label>
      <div class="control">
        <input name="public" type="checkbox" class="checkbox" <%= domain.public
        ? 'checked' : '' %> />
      </div>
    </div>

    <div class="field">
      <label class="label">Wildcard</label>
      <div class="control">
        <input name="wildcard" type="checkbox" class="checkbox" <%=
        domain.wildcard ? 'checked' : '' %> />
      </div>
    </div>

    <div class="field">
      <label class="label">Editable by Donor</label>
      <div class="control">
        <input name="editable" type="checkbox" class="checkbox" <%=
        domain.editable ? 'checked' : '' %> />
      </div>
    </div>

    <div class="field">
      <button class="button is-primary" type="submit">Save</button>
      <a href="/admin/domains/<%= domain.id %>/delete" class="button is-danger">
        Delete
      </a>
    </div>
  </form>
</div>
