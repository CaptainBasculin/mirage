<h1 class="title">Pastes</h1>
<h2 class="subtitle">
  View all pastes you have uploaded
</h2>

<table class="table is-hoverable is-fullwidth is-striped">
  <thead>
    <tr>
      <th>Path</th>
      <th>Encrypted</th>
      <th>Upload Date</th>
      <th>Size</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% pastes.map(paste => { %>
    <tr>
      <td>
        <a href="/paste/<%= paste.shortId %>" target="_blank">
          <%= paste.shortId %>
        </a>
      </td>
      <td><%= paste.encrypted %></td>
      <td><%= paste.creationDate %></td>
      <td><%= paste.size %></td>
      <td>
        <a
          class="button is-danger"
          href="/account/pastes/<%= paste.id %>/delete"
        >
          Delete
        </a>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
