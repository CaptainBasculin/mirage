<h1 class="title">Account Dashboard</h1>
<p class="content">Select a page from the sidebar on the left.</p>

<div class="content">
  <p>
      <h3>Upload Key</h3>
      <input
        class="input"
        id="upload-key-input"
        type="text"
        disabled="true"
        value="<%= profile.uploadKey %>"
      />
      <button class="button is-primary" onclick="copyKey()">Copy</button>
  </p>
  <p>
    <form action="/account/secure" method="POST">
      <h3>Secure Names</h3>
      <h4>Toggle secure names for your file uploads</h4>
      Secure names are currently <strong><%= profile.longNames ? "ON" : "OFF" %></strong>
      <button class="button is-warning" type="submit">Toggle</button>
    </form>
  </p>
</div>
<script>
  window.copyKey = () => {
    let element = document.getElementById('upload-key-input')
    element.disabled = false
    element.select()
    element.setSelectionRange(0, 99999)
    document.execCommand('copy')
    element.disabled = true
  }
</script>
